@model UserDto
@{
}

<div class="row">
    <div class="col-md-8 rounded border p-3">
        <h2 class="col-sm-4 mb-5">New User</h2>

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-form"Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Password</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Password">
                    <!--<span asp-validation-form"Name" class="text-danger"></span>-->
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">User Type</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="IsAdmin">
                        <option value="false">Normal User</option>
                        <option value="true">Admin User</option>
                    </select>
                    <span asp-validation-for="IsAdmin" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary" Submit>Create</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>